{
  "name": "dylan-cli",
  "version": "0.0.18",
  "private": true,
  "scripts": {
    "stub": "pnpm -r run stub",
    "lint": "eslint . --fix",
    "fm": "dy prettier-write",
    "cm": "dy git-commit",
    "cleanup": "dy cleanup",
    "ncu": "dy taze",
    "typecheck": "tsc --noEmit",
    "build": "pnpm -r run typecheck && pnpm -r run build",
    "release": "dy release && pnpm build && pnpm publish-pkg",
    "publish-pkg": "pnpm -r publish --access public",
    "prepare": "dy init-simple-git-hooks"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.9",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@dylanjs/cli": "workspace:*",
    "@dylanjs/eslint-config": "^0.0.7",
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^20.5.6",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "simple-git-hooks": "2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm dy git-commit-verify",
    "pre-commit": "pnpm dy lint-staged"
  }
}
