{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./lib/*"
      ]
    }
  },
  "include": [
    "bin/**/*",
    "lib/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}